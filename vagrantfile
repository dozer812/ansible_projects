    mariadb0.vm.box_check_update = false
    mariadb0.vm.hostname = "mariadb0"
    mariadb0.vm.network "public_network", ip: "192.168.1.112"
  end

  config.vm.define "mariadb1" do |mariadb1|
    mariadb1.vm.box = "ubuntu/focal64"
